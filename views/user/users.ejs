<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community | Modern Dark</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    :root {
      --bg-dark: #0f172a;
      --card-bg: rgba(30, 41, 59, 0.7);
      --accent-color: #6366f1;
      --text-main: #f8fafc;
      --text-muted: #94a3b8;
    }

    body {
      background: radial-gradient(circle at top right, #1e1b4b, #0f172a);
      background-attachment: fixed;
      color: var(--text-main);
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
    }

    /* Shared Navbar Style */
    .navbar {
      background: rgba(15, 23, 42, 0.8) !important;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    .navbar-brand { font-weight: 800; color: var(--accent-color) !important; }

    /* Glass Container */
    .glass-card {
      background: var(--card-bg);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 1.25rem;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    /* Table Customization */
    .table { color: var(--text-main); margin-bottom: 0; }
    .table thead th {
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      color: var(--text-muted);
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.05em;
      padding: 1.5rem;
    }
    .table tbody td {
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      padding: 1.25rem 1.5rem;
      vertical-align: middle;
    }
    .table-hover tbody tr:hover {
      background: rgba(255, 255, 255, 0.03);
    }

    /* Avatar & Badges */
    .user-avatar {
      width: 38px;
      height: 38px;
      background: var(--accent-color);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 10px;
      font-weight: bold;
    }
    .badge-me {
      background: rgba(99, 102, 241, 0.2);
      color: var(--accent-color);
      border: 1px solid rgba(99, 102, 241, 0.3);
    }

    .btn-action {
      padding: 0.4rem 0.8rem;
      border-radius: 8px;
      font-size: 0.85rem;
      transition: all 0.2s ease;
    }

    /* Success Alert */
    .alert-glass {
      background: rgba(16, 185, 129, 0.1);
      border: 1px solid rgba(16, 185, 129, 0.2);
      color: #34d399;
      backdrop-filter: blur(4px);
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
      <a class="navbar-brand" href="/dashboard"><i class="bi bi-shield-lock-fill me-2"></i>AUTH.IO</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item"><a class="nav-link px-3" href="/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link px-3 active" href="/users">Community</a></li>
          <li class="nav-item ms-lg-3">
            <form action="/logout" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-danger px-4 rounded-pill">Logout</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5 mb-5">
    <% if (locals.success && success.length > 0) { %>
      <div class="alert alert-glass alert-dismissible fade show rounded-4 mb-4" role="alert">
        <i class="bi bi-check2-all me-2"></i> <%= success %>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-end mb-4">
      <div>
        <h2 class="fw-bold mb-0">Community</h2>
        <p class="text-muted mb-0">Manage and view all registered system users.</p>
      </div>
      <span class="badge bg-dark border border-secondary rounded-pill px-3 py-2">
        Total: <%= users.length %>
      </span>
    </div>

    <div class="glass-card overflow-hidden">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>User</th>
              <th>Email Address</th>
              <th>Joined Date</th>
              <th class="text-end">Management</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="user-avatar me-3">
                      <%= user.username.charAt(0).toUpperCase() %>
                    </div>
                    <div>
                      <div class="fw-bold"><%= user.username %></div>
                      <% if (user.id === currentUserId) { %>
                        <span class="badge badge-me small">You</span>
                      <% } else { %>
                        <span class="text-muted small">ID: #<%= user.id.toString().slice(-4) %></span>
                      <% } %>
                    </div>
                  </div>
                </td>
                <td><span class="text-muted"><%= user.email %></span></td>
                <td><span class="text-muted"><%= new Date(user.createdAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric', year: 'numeric' }) %></span></td>
                <td class="text-end">
                  <div class="btn-group">
                    <a href="/users/<%= user.id %>/edit" class="btn btn-action btn-outline-light border-opacity-10 me-2">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <% if (user.id !== currentUserId) { %>
                      <button class="btn btn-action btn-outline-danger border-opacity-10" onclick="deleteUser('<%= user.id %>')">
                        <i class="bi bi-trash"></i>
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    async function deleteUser(userId) {
      // Custom modern confirm logic could go here, but using default for brevity
      if (!confirm('Are you sure you want to remove this user from the system?')) return;

      try {
        const response = await fetch(`/users/api/${userId}`, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' }
        });

        const result = await response.json();
        if (result.success) {
          location.reload();
        } else {
          alert(result.error);
        }
      } catch (error) {
        alert('Internal System Error');
      }
    }
  </script>
</body>
</html>